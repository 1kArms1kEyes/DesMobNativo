<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="18dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Product image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgProduct"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_product"
            app:shapeAppearanceOverlay="@style/RoundedLg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Camiseta Sky Flow"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111111"
            app:layout_constraintStart_toEndOf="@id/imgProduct"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="14dp" />

        <!-- Talla -->
        <TextView
            android:id="@+id/tvSizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Talla:"
            android:textSize="14sp"
            android:textColor="#8A8F98"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/tvSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:textSize="14sp"
            android:textColor="#62666F"
            app:layout_constraintStart_toEndOf="@id/tvSizeLabel"
            app:layout_constraintBaseline_toBaselineOf="@id/tvSizeLabel"
            android:layout_marginStart="8dp" />

        <!-- Color -->
        <TextView
            android:id="@+id/tvColorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color:"
            android:textSize="14sp"
            android:textColor="#8A8F98"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvSizeLabel"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/tvColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Azul y blanco"
            android:textSize="14sp"
            android:textColor="#62666F"
            app:layout_constraintStart_toEndOf="@id/tvColorLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tvColorLabel"
            android:layout_marginStart="8dp" />

        <!-- BARRIER under attributes -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/attrsBarrier"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tvColorLabel,tvColor" />

        <!-- Qty row BELOW the barrier -->
        <ImageButton
            android:id="@+id/btnDec"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_circle_soft"
            android:src="@drawable/ic_chevron_down_24"
            android:contentDescription="@string/decrease"
            app:tint="#62666F"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/attrsBarrier"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18sp"
            android:textColor="#111111"
            app:layout_constraintStart_toEndOf="@id/btnDec"
            app:layout_constraintTop_toTopOf="@id/btnDec"
            app:layout_constraintBottom_toBottomOf="@id/btnDec"
            android:layout_marginStart="16dp" />

        <ImageButton
            android:id="@+id/btnInc"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_circle_soft"
            android:src="@drawable/ic_chevron_up_24"
            android:contentDescription="@string/increase"
            app:tint="#62666F"
            app:layout_constraintStart_toEndOf="@id/tvQty"
            app:layout_constraintTop_toTopOf="@id/btnDec"
            app:layout_constraintBottom_toBottomOf="@id/btnDec"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$70.000"
            android:textSize="16sp"
            android:textColor="#8A8F98"
            app:layout_constraintStart_toEndOf="@id/btnInc"
            app:layout_constraintTop_toTopOf="@id/btnInc"
            app:layout_constraintBottom_toBottomOf="@id/btnInc"
            android:layout_marginStart="18dp" />

        <ImageButton
            android:id="@+id/btnRemove"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_soft"
            android:src="@drawable/ic_delete_24"
            android:contentDescription="@string/delete"
            app:tint="#8A8F98"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnInc"
            app:layout_constraintBottom_toBottomOf="@id/btnInc" />

        <!-- Bottom padding so shadow doesn't clip -->
        <Space
            android:layout_width="0dp"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnInc"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
