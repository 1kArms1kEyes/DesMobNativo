<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header image -->
    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_product_large"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Back circle on top of image -->
    <FrameLayout
        android:id="@+id/backContainer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_light"
        app:layout_constraintTop_toTopOf="@id/imgHeader"
        app:layout_constraintStart_toStartOf="@id/imgHeader"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_arrow_back_24"
            android:background="@drawable/bg_circle_light"
            android:contentDescription="@string/btnback_text"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>
    </FrameLayout>

    <!-- Scrollable details -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/imgHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="24dp">

            <!-- Title + price row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hoodie Flamas"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#111111"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$170.000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#111111"/>
            </LinearLayout>

            <!-- Talla -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Talla"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="14dp"
                android:textColor="#111111"/>

            <!-- Size chips -->
            <LinearLayout
                android:id="@+id/sizesRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Copy this MaterialButton for all sizes you need -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSizeS"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="S"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:strokeColor="#E6E8EE"
                    app:strokeWidth="1dp"
                    app:backgroundTint="#F6F7FA"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSizeM"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="M"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:strokeColor="#E6E8EE"
                    app:strokeWidth="1dp"
                    app:backgroundTint="#F6F7FA"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSizeL"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="L"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:strokeColor="#E6E8EE"
                    app:strokeWidth="1dp"
                    app:backgroundTint="#F6F7FA"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSizeXL"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="XL"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:strokeColor="#E6E8EE"
                    app:strokeWidth="1dp"
                    app:backgroundTint="#F6F7FA"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSize2XL"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="2XL"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:strokeColor="#E6E8EE"
                    app:strokeWidth="1dp"
                    app:backgroundTint="#F6F7FA"/>
            </LinearLayout>

            <!-- Color -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:textColor="#111111"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilColor"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundColor="#F6F7FA"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:endIconMode="dropdown_menu">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/actvColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:hint="Rojo"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Cantidad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:textColor="#111111"/>

            <LinearLayout
                android:id="@+id/qtyRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnDec"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_circle_soft"
                    android:src="@drawable/ic_chevron_down_24"
                    android:contentDescription="@string/decrease"
                    app:tint="#8A8F98"/>

                <TextView
                    android:id="@+id/tvQty"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="#111111"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_chip_soft"/>

                <ImageButton
                    android:id="@+id/btnInc"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_circle_soft"
                    android:src="@drawable/ic_chevron_up_24"
                    android:contentDescription="@string/increase"
                    app:tint="#8A8F98"/>
            </LinearLayout>

            <!-- Descripción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:textColor="#111111"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hoodie estilo hip hop con estampados gráficos en llamas y letras urbanas, ideal para un look callejero y atrevido."
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom bar -->
    <FrameLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="#8D6BFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Agregar al carrito"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/transparent"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
