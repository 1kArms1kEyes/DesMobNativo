<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header image -->
    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_product_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Back circle on top of image -->
    <FrameLayout
        android:id="@+id/backContainer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_light"
        app:layout_constraintTop_toTopOf="@id/imgHeader"
        app:layout_constraintStart_toStartOf="@id/imgHeader"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_arrow_back_24"
            android:background="@drawable/bg_circle_light"
            android:contentDescription="@string/btnback_text"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>
    </FrameLayout>

    <!-- Scrollable details -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/imgHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnUpdate">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="24dp">

            <!-- Title + price row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/titulo_detalle_pd_text"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/precio_detalle_pd_text"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Talla -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/talla_detalle_pd_text"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="14dp"
                android:textColor="@color/black"/>

            <!-- Size chips -->
            <LinearLayout
                android:id="@+id/sizesRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSizeS"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/talla_s_detalle_pd_text"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/lavender_mist"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/lavenderBlue"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSizeM"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/talla_m_detalle_pd_text"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/lavender_mist"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/lavenderBlue"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSizeL"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/talla_l_detalle_pd_text"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/lavender_mist"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/lavenderBlue"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSizeXL"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/talla_xl_detalle_pd_text"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/lavender_mist"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/lavenderBlue"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSize2XL"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/talla_2xl_detalle_pd_text"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/lavender_mist"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/lavenderBlue"/>
            </LinearLayout>

            <!-- Color -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_detalle_pd_label"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilColor"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundColor="@color/lavenderBlue"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:endIconMode="dropdown_menu">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/actvColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:hint="@string/color_pd_label_text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Cantidad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cantidad_detalle_pd_label"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:id="@+id/qtyRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnDec"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_circle_soft"
                    android:src="@drawable/ic_chevron_down_24"
                    android:contentDescription="@string/btndisminuir_cantidad_text"
                    app:tint="@color/gray"/>

                <TextView
                    android:id="@+id/tvQty"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_chip_soft"/>

                <ImageButton
                    android:id="@+id/btnInc"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_circle_soft"
                    android:src="@drawable/ic_chevron_up_24"
                    android:contentDescription="@string/btnaumentar_cantidad_text"
                    app:tint="@color/gray"/>
            </LinearLayout>

            <!-- DescripciÃ³n -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descripcion_detalle_pd_label"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/descripcion_pd_label_text"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Update Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpdate"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/btnagregarCarrito_label"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/orange"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
